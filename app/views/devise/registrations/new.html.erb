<div class='register-page'>
  <%= render 'common/app-info' %>
  <%#登録情報入力フォーム %>
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-title'>
        Sign In
      </h1>
    </div>
    <%#エラーメッセージの表示 %>
    <%= render 'common/error-messages', model: f.object %>
    
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>名前</label>
        <span class='required'>必須</span>
      </div>
      <%= f.text_field :name, class: 'input-form', id: 'name', placeholder: '例) 田中太郎', maxlength: '40', autofocus: true %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>メールアドレス</label>
        <span class='required'>必須</span>
      </div>
      <%= f.text_field :email, class: 'input-form', id: 'email', placeholder: 'PCまたは携帯どちらでも可' %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード</label>
        <span class='required'>必須</span>
      </div>
      <%= f.password_field :password, class: 'input-form', id: 'password', placeholder: '6文字以上の半角英数字' %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード(確認)</label>
        <span class='required'>必須</span>
      </div>
      <%= f.password_field :password_confirmation, class: 'input-form', id: 'password_confirmation', placeholder: '同じパスワードを入力してください' %>
    </div>
    <div class='register'>
      <%= f.submit 'Sign In', class: 'register-btn' %>
    </div>
  </div>
  <% end %>
</div>