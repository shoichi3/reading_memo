<%= render 'common/second-header' %>

<%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-title'>
      登録内容入力
    </h1>
  </div>
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>メールアドレス</label>
      <span class='required'>必須</span>
    </div>
    <%= f.email_field :email, class: 'input-form', id: 'email', placeholder: 'PCまたは携帯どちらでも可', autofocus: true %>
  </div>
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>パスワード</label>
      <span class='required'>必須</span>
    </div>
    <%= f.password_field :password, class: 'input-form', id: 'password', placeholder: '' %>
  </div>
  <div class='login'>
    <%= f.submit 'ログイン', class: 'login-btn' %>
  </div>
</div>
<% end %>

<footer></footer>