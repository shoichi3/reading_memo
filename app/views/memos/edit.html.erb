<div class='add-memo'>
   <%#メモ追加フォーム %>
  <div class='add-memo-form'>
    <div class='heading'>
      <div class='form-title'>
        メモの編集
      </div>
    </div>
    <%= form_with model: [@book, @memo], local: true, class: 'memo-form' do |f| %>
      <%# エラーメッセージの表示 %>
      <%= render 'common/error-messages', model: f.object %>
      <div class="img-upload">
        <div class="weight-bold-text">
          画像の選択
          <span class="required">必須</span>
        </div>
        <div class="click-upload">
          <%= f.file_field :image, id:"item-image" %>
        </div>
      </div>
      <div class='a'>
        <%= f.label :メモ, class: 'memo-label' %>
        <span class="required">必須</span>
      </div>
      <%= f.text_area :memo, class: 'memo-text', placeholder: 'メモを入力してください', rows: 5 %>
      <%= f.submit 'メモを編集', class: 'memo-register-btn' %>
    <% end %>
  </div>
</div>