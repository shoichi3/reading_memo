<header class='my-page-header'>
  <%# ヘッダー上部 %>
  <div class='search'>
    <%= render 'common/app-title' %>
  </div>
  <%# ヘッダー下部 %>
  <div class='guide'>
   <div class='left-side-header'>
      <ul>
        <li>
          <%= link_to 'メモ一覧', book_path(@book) , class: 'memo-index'%>
        </li>
      </ul>
    </div>
    <%= render 'common/right-side-header' %>
  </div>
</header>

<%#本のタイトル入力フォーム %>
<div class='add-book'>
  <div class='main-content'>
    <div class='heading'>
      <div class='form-title'>
        タイトルの編集
      </div>
    </div>
    <%= form_with model: @book, local: true, class: 'submit-form' do |f| %>
      <%# エラーメッセージの表示 %>
      <%= render 'common/error-messages', model: f.object %>

      <%= render 'common/book-form', model: f %>
      <%= f.submit '本を編集', class: 'book-register' %>
    <% end %>
  </div>
</div>