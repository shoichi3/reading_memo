<%#マイページでの本一覧の表示 %>
<% if @books.length != 0 %>
<div class='main'>
  <div class='main-upper'>
    本一覧
  </div>

  <div class='main-lower'>
    <ul class='book-list'>
      <% @books.each do |book| %>
