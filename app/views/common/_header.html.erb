<% if user_signed_in? %>
<header class='my-page-header'>
  <div class='search'>
    <div class='app-title'>ReadingMemo</div>
    <%= form_with(url: search_book_path(@user), method: :get, class:'search-form', local: true) do |f|%>
      <%= f.text_field :keyword, placeholder:'本のタイトルを入力してください', class:'search-box' %>
      <%= f.submit '検索', class:'search-btn' %>
    <% end %>
  </div>
  <div class='guide'>
    <%= link_to '本の追加', new_book_path, class:'add-book-btn' %>
    <div class='right-side-header'>
      <ul>
        <li class='user-name'>
          <%= current_user.name %>
        </li>
        <li>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:'logout' %>
        </li>
      </ul>
    </div>
  </div>
</header>
<% else %>
<header class='top-page-header'>
  <div class='guide'>
    <%= link_to 'ReadingMemo', new_user_registration_path, class:'app-title' %>
    <div class='top-right-side-header'>
      <ul>
        <li>
          <%= link_to '新規登録', new_user_registration_path, class:'sign-up' %>
        </li>
        <li>
          <%= link_to 'ログイン', new_user_session_path, class:'login' %>
        </li>
      </ul>
    </div>
  </div>
</header>
<% end %>